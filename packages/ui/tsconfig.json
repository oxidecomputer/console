{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true
  },
  "include": ["./src/*"],
  "exclude": ["**/__tests__/**", "**/stories/**"],
  "references": [{ "path": "../theme" }]
}
